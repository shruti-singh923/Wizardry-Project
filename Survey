    <script>
        // Data Definitions matching the Report
        const services = [
            { id: 'veg', label: '‡§∏‡§¨‡•ç‡§ú‡•Ä ‡§ï‡•Ä ‡§¶‡•Å‡§ï‡§æ‡§® (Vegetable Shop)', icon: 'ü•¶' },
            { id: 'gro', label: '‡§ï‡§ø‡§∞‡§æ‡§®‡§æ ‡§¶‡•Å‡§ï‡§æ‡§® (Grocery Store)', icon: 'üõí' },
            { id: 'beau', label: '‡§¨‡•ç‡§Ø‡•Ç‡§ü‡•Ä‡§∂‡§ø‡§Ø‡§® / ‡§∏‡•à‡§≤‡•Ç‡§® (Beautician)', icon: 'üíá‚Äç‚ôÄÔ∏è' },
            { id: 'auto', label: '‡§ë‡§ü‡•ã ‡§∞‡§ø‡§ï‡•ç‡§∂‡§æ (Auto Rickshaw)', icon: 'üõ∫' },
            { id: 'clean', label: '‡§ò‡§∞ ‡§ï‡•Ä ‡§∏‡§´‡§æ‡§à (Home Cleaning)', icon: 'üßπ' },
            { id: 'maid', label: '‡§ò‡§∞‡•á‡§≤‡•Ç ‡§∏‡§π‡§æ‡§Ø‡§ï (House Maids)', icon: 'üë©‚Äçüç≥' }
        ];

        const factors = [
            { id: 'price', label: '‡§Æ‡•Ç‡§≤‡•ç‡§Ø / ‡§∏‡§æ‡§Æ‡§∞‡•ç‡§•‡•ç‡§Ø (Price)', val: 3 },
            { id: 'quality', label: '‡§ó‡•Å‡§£‡§µ‡§§‡•ç‡§§‡§æ / ‡§ï‡•å‡§∂‡§≤ (Quality)', val: 4 },
            { id: 'trust', label: '‡§µ‡§ø‡§∂‡•ç‡§µ‡§æ‡§∏ / ‡§∏‡§§‡•ç‡§Ø‡§æ‡§™‡§® (Trust)', val: 5 },
            { id: 'speed', label: '‡§ó‡§§‡§ø / ‡§â‡§™‡§≤‡§¨‡•ç‡§ß‡§§‡§æ (Speed)', val: 3 },
            { id: 'proximity', label: '‡§®‡§ø‡§ï‡§ü‡§§‡§æ (Proximity)', val: 2 }
        ];

        // State
        let serviceData = services.map(s => ({ ...s, interest: 1, freq: 1 })); // Interest: 0-3, Freq: 1-5
        let currentPricing = '';

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            renderServices();
            renderFactors();
            renderPainPoints();
            initCharts();
        });

        // --- Render Functions ---

        function renderServices() {
            const container = document.getElementById('serviceGrid');
            container.innerHTML = serviceData.map((s, index) => `
                <div class="service-row p-4 border rounded-lg flex flex-col md:flex-row md:items-center justify-between gap-4 transition">
                    <div class="flex items-center gap-3 md:w-1/3">
                        <span class="text-2xl">${s.icon}</span>
                        <span class="font-semibold text-gray-700 text-sm">${s.label}</span>
                    </div>
                    
                    <div class="flex flex-col w-full md:w-1/3">
                        <label class="text-xs text-gray-500 mb-1">‡§∞‡•Å‡§ö‡§ø ‡§ï‡§æ ‡§∏‡•ç‡§§‡§∞ (Interest)</label>
                        <input type="range" min="0" max="3" value="${s.interest}" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer slider-thumb"
                            oninput="updateServiceData(${index}, 'interest', this.value)">
                        <div class="flex justify-between text-[10px] text-gray-400 mt-1">
                            <span>‡§®‡§π‡•Ä‡§Ç</span><span>‡§§‡§ü‡§∏‡•ç‡§•</span><span>‡§á‡§ö‡•ç‡§õ‡•Å‡§ï</span><span class="text-teal-600 font-bold">‡§Ö‡§§‡•ç‡§Ø‡§ß‡§ø‡§ï</span>
                        </div>
                    </div>

                    <div class="w-full md:w-1/4">
                        <label class="text-xs text-gray-500 mb-1">‡§Ü‡§µ‡•É‡§§‡•ç‡§§‡§ø (Frequency)</label>
                        <select class="w-full text-xs p-2 border rounded bg-white" onchange="updateServiceData(${index}, 'freq', this.value)">
                            <option value="1">‡§∂‡§æ‡§Ø‡§¶ ‡§π‡•Ä ‡§ï‡§≠‡•Ä (Rarely)</option>
                            <option value="2">‡§§‡•ç‡§∞‡•à‡§Æ‡§æ‡§∏‡§ø‡§ï (Quarterly)</option>
                            <option value="3">‡§Æ‡§æ‡§∏‡§ø‡§ï (Monthly)</option>
                            <option value="4">‡§∏‡§æ‡§™‡•ç‡§§‡§æ‡§π‡§ø‡§ï (Weekly)</option>
                            <option value="5">‡§∞‡•ã‡§ú‡§º‡§æ‡§®‡§æ (Daily)</option>
                        </select>
                    </div>
                </div>
            `).join('');
        }

        function renderFactors() {
            const container = document.getElementById('factorsContainer');
            container.innerHTML = factors.map((f, index) => `
                <div class="flex items-center justify-between gap-4">
                    <label class="text-xs font-medium text-gray-600 w-1/3">${f.label}</label>
                    <input type="range" min="1" max="5" value="${f.val}" class="w-2/3 h-1 bg-blue-100 rounded-lg appearance-none cursor-pointer"
                        oninput="updateFactor(${index}, this.value)">
                    <span class="text-xs font-bold text-blue-600 w-4 text-right" id="factor-val-${index}">${f.val}</span>
                </div>
            `).join('');
        }

        function renderPainPoints() {
            const container = document.getElementById('painPoints');
            container.innerHTML = services.map(s => `
                <button class="px-3 py-1 text-xs border border-red-200 text-red-600 rounded-full hover:bg-red-50 focus:bg-red-500 focus:text-white transition" onclick="selectPainPoint(this)">
                    ${s.label.split('(')[0]}
                </button>
            `).join('');
        }

        // --- Logic & Updates ---

        function updateServiceData(index, field, value) {
            serviceData[index][field] = parseInt(value);
            updateDemandChart();
            
            // Calc Total Score
            const total = serviceData.reduce((acc, curr) => acc + (curr.interest * 10) + curr.freq, 0);
            document.getElementById('totalScore').innerText = total;
        }

        function updateFactor(index, value) {
            factors[index].val = parseInt(value);
            document.getElementById(`factor-val-${index}`).innerText = value;
            updateRadarChart();
        }

        function updateProfile() {
            const gender = document.getElementById('gender').value;
            const age = document.getElementById('age').value;
            const tenure = document.getElementById('tenure').value;
            
            let summary = "‡§Ö‡§§‡§ø‡§•‡§ø ‡§â‡§™‡§Ø‡•ã‡§ó‡§ï‡§∞‡•ç‡§§‡§æ";
            let details = "-";

            if (gender !== '‡§ö‡§Ø‡§® ‡§ï‡§∞‡•á‡§Ç...' && age !== '‡§ö‡§Ø‡§® ‡§ï‡§∞‡•á‡§Ç...') {
                summary = `${gender}, ${age} ‡§µ‡§∞‡•ç‡§∑`;
                details = tenure !== '‡§ö‡§Ø‡§® ‡§ï‡§∞‡•á‡§Ç...' ? `‡§®‡§ø‡§µ‡§æ‡§∏‡•Ä: ${tenure}` : "‡§®‡§Ø‡§æ ‡§®‡§ø‡§µ‡§æ‡§∏‡•Ä";
            }
            
            document.getElementById('profileSummary').innerText = summary;
            document.getElementById('profileDetails').innerText = details;
        }

        function setPricing(val) {
            const feedback = document.getElementById('pricingFeedback');
            const btns = {
                yes: document.getElementById('btn-yes'),
                maybe: document.getElementById('btn-maybe'),
                no: document.getElementById('btn-no')
            };

            // Reset styles
            Object.values(btns).forEach(btn => btn.className = "flex-1 py-2 px-3 rounded-lg border text-sm transition hover:bg-gray-50");

            if (val === 'yes') {
                btns.yes.className = "flex-1 py-2 px-3 rounded-lg border border-green-500 bg-green-100 text-green-700 font-bold shadow-sm";
                feedback.innerText = "‡§Ü‡§™ ‡§ó‡•Å‡§£‡§µ‡§§‡•ç‡§§‡§æ ‡§ï‡•ã ‡§™‡•ç‡§∞‡§æ‡§•‡§Æ‡§ø‡§ï‡§§‡§æ ‡§¶‡•á‡§§‡•á ‡§π‡•à‡§Ç‡•§";
                feedback.className = "mt-3 text-xs font-semibold text-center text-green-600 h-5";
            } else if (val === 'maybe') {
                btns.maybe.className = "flex-1 py-2 px-3 rounded-lg border border-yellow-500 bg-yellow-100 text-yellow-700 font-bold shadow-sm";
                feedback.innerText = "‡§Ü‡§™ ‡§∏‡•á‡§µ‡§æ ‡§™‡§∞ ‡§®‡§ø‡§∞‡•ç‡§≠‡§∞ ‡§ï‡§∞‡§§‡•á ‡§π‡•à‡§Ç‡•§";
                feedback.className = "mt-3 text-xs font-semibold text-center text-yellow-600 h-5";
            } else {
                btns.no.className = "flex-1 py-2 px-3 rounded-lg border border-red-500 bg-red-100 text-red-700 font-bold shadow-sm";
                feedback.innerText = "‡§Ü‡§™ ‡§Æ‡•Ç‡§≤‡•ç‡§Ø ‡§ï‡•á ‡§™‡•ç‡§∞‡§§‡§ø ‡§∏‡§Ç‡§µ‡•á‡§¶‡§®‡§∂‡•Ä‡§≤ ‡§π‡•à‡§Ç‡•§";
                feedback.className = "mt-3 text-xs font-semibold text-center text-red-600 h-5";
            }
        }

        function selectPainPoint(btn) {
            // Simple visual toggle logic
            const siblings = btn.parentElement.children;
            for (let el of siblings) {
                el.classList.remove('bg-red-500', 'text-white');
                el.classList.add('text-red-600', 'border-red-200');
            }
            btn.classList.remove('text-red-600', 'border-red-200');
            btn.classList.add('bg-red-500', 'text-white');
        }

        // --- Charts ---
        let demandChart, radarChart;

        function initCharts() {
            // Bar Chart
            const ctx1 = document.getElementById('demandChart').getContext('2d');
            demandChart = new Chart(ctx1, {
                type: 'bar',
                data: {
                    labels: serviceData.map(s => s.label.split('(')[0]), // Hindi labels only
                    datasets: [{
                        label: '‡§∞‡•Å‡§ö‡§ø ‡§∏‡•ç‡§ï‡•ã‡§∞ (Interest)',
                        data: serviceData.map(s => s.interest),
                        backgroundColor: '#0d9488',
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true, max: 4, ticks: { stepSize: 1 } },
                        x: { ticks: { font: { size: 10 } } }
                    },
                    plugins: { legend: { display: false } }
                }
            });

            // Radar Chart
            const ctx2 = document.getElementById('radarChart').getContext('2d');
            radarChart = new Chart(ctx2, {
                type: 'radar',
                data: {
                    labels: factors.map(f => f.label.split('(')[0]),
                    datasets: [{
                        label: '‡§Æ‡§π‡§§‡•ç‡§µ (Importance)',
                        data: factors.map(f => f.val),
                        backgroundColor: 'rgba(59, 130, 246, 0.2)',
                        borderColor: '#3b82f6',
                        pointBackgroundColor: '#3b82f6',
                        pointBorderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e5e7eb' },
                            grid: { color: '#f3f4f6' },
                            suggestedMin: 0,
                            suggestedMax: 5,
                            ticks: { display: false } // Hide chart numbers for cleaner look
                        }
                    },
                    plugins: { legend: { display: false } }
                }
            });
        }

        function updateDemandChart() {
            demandChart.data.datasets[0].data = serviceData.map(s => s.interest);
            // Color logic: High interest = Darker Teal
            demandChart.data.datasets[0].backgroundColor = serviceData.map(s => 
                s.interest >= 3 ? '#0f766e' : (s.interest >= 2 ? '#0d9488' : '#cbd5e1')
            );
            demandChart.update();
        }

        function updateRadarChart() {
            radarChart.data.datasets[0].data = factors.map(f => f.val);
            radarChart.update();
        }

    </script>
    
    <!-- CONFIRMATION: NO SVG graphics used. NO Mermaid JS used. -->
</body>
</html>
